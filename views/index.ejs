<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.tailwindcss.com"></script>
    <title>Create User</title>
  </head>
  <body class="bg-zinc-900 text-white">
    <!-- Navigation -->
    <div class="bg-zinc-900 pl-10 pt-10 text-blue-500 text-xl">
      <a href="/read" class="hover:text-blue-300">Read Users</a>
    </div>

    <!-- Form Section -->
    <div class="min-h-screen w-full bg-zinc-900 p-10">
      <h1 class="text-3xl mb-5">Create User</h1>
      <form action="/create" method="POST" class="space-y-5">
        <!-- Name Input -->
        <div>
          <label for="name" class="block mb-1 text-zinc-400">Name</label>
          <input
            type="text"
            id="name"
            name="name"
            class="px-5 py-3 w-full bg-transparent border-2 border-zinc-500 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
            placeholder="Enter Name"
            required
          />
        </div>

        <!-- Email Input -->
        <div>
          <label for="email" class="block mb-1 text-zinc-400">Email</label>
          <input
            type="email"
            id="email"
            name="email"
            class="px-5 py-3 w-full bg-transparent border-2 border-zinc-500 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
            placeholder="Enter Email"
            required
          />
        </div>

        <!-- Image URL Input -->
        <div>
          <label for="imageURL" class="block mb-1 text-zinc-400">Image URL</label>
          <input
            type="text"
            id="imageURL"
            name="imageURL"
            class="px-5 py-3 w-full bg-transparent border-2 border-zinc-500 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
            placeholder="Enter Image URL"
            required
          />
        </div>

        <!-- Submit Button -->
        <div>
          <input
            type="submit"
            value="Create User"
            class="px-5 py-3 bg-blue-500 rounded-lg hover:bg-blue-600 cursor-pointer"
          />
        </div>
      </form>
    </div>
  </body>
</html>
